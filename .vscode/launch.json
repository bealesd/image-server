{
     "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "serve"
            ],
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Client",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}